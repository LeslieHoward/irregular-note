var bbkz_lightroom={init:function(){if(!Function.prototype.bind){return}this.active=false;var t=document.querySelectorAll("img[data-lightroom]");this.overlay=document.createElement("div");this.overlay.id="bbkz-lightroom";this.overlay.style.display="none";this.overlay.style.cursor="pointer";this.overlay=document.body.appendChild(this.overlay);this.overlay.addEventListener("click",this.closelr.bind(this));this.keyevt=this.keydownlr.bind(this);for(var e=0;e<t.length;e++){if(t[e].parentElement.tagName!="A"){t[e].addEventListener("click",this.openlr.bind(this,t[e]))}}},openlr:function(t){var e=t.getAttribute("data-lightroom");if(e&&this.overlay&&!this.active&&!this.active){this.active=true;this.overlay.innerHTML='<div style="transform:scale(1,1);position: fixed;display:flex;justify-content: center;align-items: center;top:-120px;left: 0px;right:0;bottom:-120px;background: rgba(0, 0, 0, 0.85);z-index:9999;"><img src="'+e+'" style="max-height:100vh;max-width:100%;cursor: zoom-out;"><svg style="pointer-events: none;position:absolute;right:6px;top:165px; opacity: .7;cursor:pointer" width="50" height="50" viewBox="0 0 50 50"><path fill="#d8d8d8" d="M42.68 7.32a25 25 0 100 35.36 25 25 0 000-35.36zm-8.13 25.1a1 1 0 010 1.42 1 1 0 01-.71.29 1 1 0 01-.71-.29l-7.42-7.43-7.43 7.43a1 1 0 01-1.41-1.42L24.29 25l-7.42-7.42a1 1 0 010-1.42 1 1 0 011.41 0l7.43 7.43 7.42-7.43a1 1 0 111.42 1.42L27.12 25z" /></svg></div>';this.overlay.style.display="block";window.addEventListener("keydown",this.keyevt)}},closelr:function(){this.active=false;console.log("closelr");this.overlay.style.display="none";this.overlay.innerHTML="";window.removeEventListener("keydown",this.keyevt)},keydownlr:function(t){if(t.key=="Escape"){this.closelr()}}};bbkz_lightroom.init();